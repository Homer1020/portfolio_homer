---
interface Props {
  image: string,
  title: string,
  stack?: string[]
}

const { title, image, stack = [] } = Astro.props

---
<article>
  <img src={image} alt={title}>
  <h3>{title}</h3>
</article>
<style>
  img {
    border-radius: 10px;
    margin-bottom: 1rem;
  }

  h3 {
    font-weight: 500;
  }
</style>