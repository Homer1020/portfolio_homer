---
  const { name, role, testimonial, avatar } = Astro.props
  console.log(avatar)
---
  <blockquote>
    <div>
      <i class="decoration fa fa-quote-left"></i>
    </div>
    <p class="bq__text">{ testimonial }</p>

    <div class="profile">
      <img class="avatar" src={ `${ avatar }` } alt="">

      <div>
        <p class="profile__name">{ name }</p>
        <p class="profile__role">{ role }</p>
      </div>
    </div>
  </blockquote>

  <style>
    .decoration {
      color: var(--secondary);
      font-size: 6rem;
    }

    .avatar {
      width: 7rem !important;
      height: 7rem !important;
      object-fit: cover;
      border-radius: 50%;
    }

    .profile {
      justify-content: center;
      display: flex;
      align-items: center;
      margin-top: 2rem;
      gap: 1.5rem;
    }

    .profile__name,
    .profile__role {
      margin: 0;
      line-height: 1.5;
    }

    .profile__name {
      font-weight: bold;
      font-size: 1.6rem;
      color: #000;
    }

    .profile__role {
      font-size: 1.4rem;
    }

    blockquote {
      box-shadow: 0 0.5em 1em -0.125em rgba(10,10,10,.1), 0 0 0 1px rgba(10,10,10,.02);
      background-color: #fff;
      border-radius: 5px;
      padding: 3rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    .bq__text {
      line-height: 1.7;
      margin-top: 2.2rem;
      margin-bottom: 3rem;
    }
  </style>